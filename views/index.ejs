<html lang="en">
<head>
  <title>Covid19</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body >
  <div style = "color: purple;
                height: 608px;
                width: 100%;
                border: black;
                background-image: url('./views/maman2.png');">
    <h1 style="padding: 40px; 
               text-align: left ;
               text-decoration-style:dotted;"
               class="page-header">covid 19 online information</h1>
    
  </div>
  <div  style="background-color: bisque ; "
        class="list-group">
    <h2 style="padding: 20px;
               font-size: large ;
               text-align: center;
               color: purple;">choose a country</h2>
    <% locations.forEach(function(location , key ) { %>
      <% if (location.province != "") {%>
        <button 
        type="button"
        style = " color: purple;
                  margin: 5px;
                  text-align: center;
                  background-color: rgb(232, 200, 236);
                  width: 40%;
                  align-self: center;
                  border-color: inherit;"  
                  class="btn btn-primary btn-block"
                  data-toggle="modal" 
                  data-target="#country_<%= key %>">
                  <%= location.country %> - <%= location.province %> </button>
            <div class="modal fade" id="country_<%= key %>" role="dialog">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 style = "align-self: left;"
                        class= "modal-title">latest information on covid 19</h4>
                  </div>
                  <div class="modal-body">
                    <p>Name : <%= location.country %> <br>
                     Population : <%= location.country_population %> <br>
                     Confirmed Cases : <%= location.latest.confirmed %> <br>
                     Deaths : <%= location.latest.deaths %> <br>
                     Recovered : <%= location.latest.recovered %> <br>
                    </p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          <%} else {%>
          <button 
          type="button"
          style = " color: purple;
                    text-align: center;
                    margin: 5px;
                    background-color: rgb(232, 200, 236);
                    width: 40%;
                    align-self: center;
                    border-color: inherit;"  
                    class="btn btn-primary btn-block"
                    data-toggle="modal" 
                    data-target="#country_<%= key %>">
                    <%= location.country %> </button>
              <div class="modal fade" id="country_<%= key %>" role="dialog">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 style = "text-align: left;"
                          class= "modal-title">latest information about covid 19</h4>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      
                    </div>
                    <div class="modal-body">
                      <p>Country Name : <%= location.country %> <br>
                       Population : <%= location.country_population %> <br>
                       Confirmed Cases : <%= location.latest.confirmed %> <br>
                       Deaths : <%= location.latest.deaths %> <br>
                       Recovered : <%= location.latest.recovered %> <br>
                      </p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
          <%}%>
    <% }); %>
    <script>
      
    </script>
  </div>
</body>
</html>



 
  